rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // usernameToUid mapping
    match /usernameToUid/{username} {
      allow read: if true;

      // allow create only if authenticated and uid matches and doc doesn't exist
      allow create: if request.auth != null
                    && request.resource.data.uid == request.auth.uid
                    && !exists(/databases/$(database)/documents/usernameToUid/$(username));

      // disallow updates/deletes from client
      allow update, delete: if false;
    }

    // users collection: public read, owner-only write
    match /users/{uid} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == uid;
    }
  }
}
